<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/imageviewbackground_playlist"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="110dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:background="@drawable/backgroundbanner"/>
    
    <ImageView
        android:id="@+id/imageiconplaylist"
        android:scaleType="fitXY"
        android:layout_alignBottom="@id/imageviewbackground_playlist"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/dp_10"
        android:elevation="6dp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp" />

    <TextView
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="hihihi"
        android:layout_alignBottom="@id/imageviewbackground_playlist"
        android:layout_toRightOf="@id/imageiconplaylist"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/tv_name_playlist"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>